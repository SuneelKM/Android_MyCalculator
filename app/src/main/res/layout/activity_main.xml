<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="bottom">

    <TextView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/teal_200"
        android:text="0"
        android:textSize="35sp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="7dp"
        android:textAlignment="viewEnd"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="AC"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="operation"/>



        <Button
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="⌫"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="operation"/>

        <Button
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="%"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="operation"/>

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="@color/ash"
            android:text="÷"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="operation"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="7"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="numberEntry"
            />



        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="8"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="numberEntry"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="9"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="numberEntry"/>

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="@color/ash"
            android:text="×"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="operation"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="4"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="numberEntry"/>



        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="5"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="numberEntry"/>

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="6"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="numberEntry"/>

        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:backgroundTint="@color/ash"
            android:text="-"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="operation"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="1"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="numberEntry"/>



        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="2"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="numberEntry"/>

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="3"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="numberEntry"/>

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="+"
            android:backgroundTint="@color/ash"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="operation"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1.1"
            android:text="0"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="numberEntry"/>


        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="0.1"
            android:text="."
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="operation"/>

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="0.1"
            android:backgroundTint="@color/ash"
            android:text="="
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:textSize="25sp"
            android:onClick="operation"/>




    </LinearLayout>



</LinearLayout>